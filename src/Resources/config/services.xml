<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" autowire="true" autoconfigure="true" />

        <prototype namespace="Mtarld\ApiPlatformMsBundle\" resource="../../*" exclude="../../{DependencyInjection,Exception,Tests}">
            <bind key="$httpClient" id="api_platform_ms.http_client" />
        </prototype>

        <prototype namespace="Mtarld\ApiPlatformMsBundle\Controller\" resource="../../Controller/*">
            <tag name="controller.service_arguments" />
        </prototype>
    </services>
</container>
